{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\lib\\supabase\\service.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Next: Dev (launch)",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "env": {
                "NODE_OPTIONS": "--inspect=9229"
            },
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "pwa-node",
            "request": "attach",
            "name": "Attach to Next (9229)",
            "port": 9229,
            "restart": true,
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Frontend: Open in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "userDataDir": "${workspaceFolder}/.vscode/chrome"
        }
    ],
    "compounds": [
        {
            "name": "Backend + Frontend",
            "configurations": ["Next: Dev (launch)", "Frontend: Open in Chrome"],
            "stopOnEntry": false
        },
        {
            "name": "Backend only",
            "configurations": ["Next: Dev (launch)"]
        },
        {
            "name": "Frontend only",
            "configurations": ["Frontend: Open in Chrome"]
        }
    ]
}